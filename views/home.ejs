<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Password Manager</title>
    <link rel="stylesheet" href="/styles.css" />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />
  </head>
  <body>
    <div class="container">
      <h1><i class="fas fa-key"></i> Password Manager</h1>

      <!-- Add New Password Section -->
      <h2>Add New Password</h2>
      <form action="/passwords/add" method="POST">
        <input type="text" name="website" placeholder="Website" required />
        <input type="text" name="username" placeholder="Username" required />
        <div style="position: relative">
          <input
            type="password"
            name="password"
            id="password"
            placeholder="Password"
            required
            oninput="checkStrength()"
          />
          <button type="button" onclick="togglePassword()" class="copy-btn">
            <i class="fas fa-eye"></i>
          </button>
        </div>
        <p id="strength">Password Strength: Weak</p>
        <button type="submit">
          <i class="fas fa-plus-circle"></i> Add Password
        </button>
      </form>

      <!-- Saved Passwords Section -->
      <h2>Saved Passwords</h2>
      <ul class="password-list">
        <% passwords.forEach(password => { %>
        <li class="password-item">
          <span>
            <strong><%= password.website %></strong>&nbsp;&nbsp;&nbsp;<%=
            password.username %>&nbsp;&nbsp;&nbsp;
            <strong><%= password.password %></strong>
          </span>
          <div>
            <button
              class="copy-btn"
              onclick="copyPassword('<%= password.password %>')"
            >
              <i class="fas fa-copy"></i>
            </button>
            <button
              class="delete-btn"
              onclick="deletePassword('<%= password._id %>')"
            >
              <i class="fas fa-trash"></i>
            </button>
          </div>
        </li>
        <% }) %>
      </ul>

      <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </div>

    <script>
      function togglePassword() {
        let passInput = document.getElementById("password");
        passInput.type = passInput.type === "password" ? "text" : "password";
      }

      function copyPassword(password) {
        navigator.clipboard.writeText(password);
        alert("✅ Password copied!");
      }

      function deletePassword(id) {
        if (confirm("❌ Are you sure you want to delete this password?")) {
          fetch(`/passwords/delete/${id}`, { method: "POST" }).then(() => {
            window.location.reload();
          });
        }
      }

      function checkStrength() {
        let pass = document.getElementById("password").value;
        let strength = document.getElementById("strength");

        if (
          pass.length > 8 &&
          /[A-Z]/.test(pass) &&
          /[0-9]/.test(pass) &&
          /[^A-Za-z0-9]/.test(pass)
        ) {
          strength.textContent = "Password Strength: Strong ✅";
          strength.style.color = "green";
        } else if (pass.length >= 6) {
          strength.textContent = "Password Strength: Medium ⚠️";
          strength.style.color = "orange";
        } else {
          strength.textContent = "Password Strength: Weak ❌";
          strength.style.color = "red";
        }
      }
    </script>
  </body>
</html>
